{
    "name": "adyax/drupal8-boilerplate",
    "description": "Adyax template for Drupal 8 projects with composer-based workflow",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Adyax",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "drupal-composer/drupal-scaffold": "^1.2",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "8.1.*",
        "drush/drush": "~8.0",
        "drupal/console": "~0.10",
        "drupal/devel": "8.1.*@dev",
        "drupal/admin_toolbar": "8.1.*@dev",
        "drupal/workbench_moderation": "8.1.x-dev",
        "drupal/migrate_plus": "8.1.*@dev",
        "drupal/migrate_source_csv": "8.1.*@dev",
        "drupal/migrate_tools": "8.1.*@dev",
        "drupal/paragraphs": "8.1.*@dev",
        "drupal/address": "8.1.x-dev",
        "drupal/entity": "8.1.x-dev",
        "drupal/state_machine": "8.1.x-dev",
        "drupal/inline_entity_form": "8.1.x-dev",
        "drupal/search_api": "8.1.*@dev",
        "drupal/search_api_solr": "8.1.*@dev",
        "drupal/realistic_dummy_content": "8.x.*@dev",
        "drupal/ctools": "8.*@dev",
        "drupal/services": "8.4.*@dev",
        "drupal/Csv_serialization": "8.1.*@dev"
    },
    "require-dev": {
        "behat/behat": "^3.1",
        "drupal/drupal-extension": "^3.1",
        "behat/mink": "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "2.7.*",
        "squizlabs/php_codesniffer": "2.*",
        "drupal/coder": "8.2.*"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
          "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
          "sh ./scripts/composer/post-install.sh",
          "sh ./scripts/tools/setup.sh"
        ],
        "post-update-cmd": [
          "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ]
    },
    "config": {
      "bin-dir": "bin/"
    },
    "extra": {
        "installer-paths": {
            "docroot/core": ["type:drupal-core"],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
        },
        "enable-patching": true
    }
}
